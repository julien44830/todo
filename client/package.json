{
    "name": "todo_liste",
    "private": true,
    "version": "0.0.0",

    "scripts": {
        "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
        "dev:client": "vite",
        "dev:server": "cd ../server && npx nodemon src/index.js",
        "build": "vite build",
        "serve": "vite preview",
        "test": "jest"
    },
    "dependencies": {
        "prop-types": "^15.8.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.26.0"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@babel/preset-react": "^7.24.7",
        "@testing-library/jest-dom": "^6.5.0",
        "@testing-library/react": "^16.0.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "babel-jest": "^29.7.0",
        "concurrently": "^7.6.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.3",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.7",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "vite": "^5.3.4",
        "vite-plugin-babel": "^1.2.0"
    },
    "description": "This template provides a minimal setup to get React working in Vite with HR and some ESLint rules.",
    "main": "vite.config.js",
    "repository": {
        "type": "git",
        "url": "todo"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "transform": {
            "^.+\\.jsx?$": "babel-jest"
        },
        "moduleFileExtensions": [
            "js",
            "jsx"
        ],
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom"
        ]
    },
    "author": "",
    "license": "ISC"
}
